<%== form_tag login_path do %>

<% if @error != nil %>
  <b>Error: <%= @error %></b>
<% end %>

<h1>Bank login</h1>

<p>
  Username
  <br>
  <%== text_field_tag :username, "" %>
</p>

<p>
  Password
  <br>
  <%== password_field_tag :password, "" %>
</p>


<%== submit_tag "Login" %>

<p>(Username/password is abe/123 or amy/456)</p>

<% end %>
